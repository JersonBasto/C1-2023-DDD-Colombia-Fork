{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@sofka/*": ["./src/shared/sofka/*"],
      "@validations/*": ["./src/shared/validations/*"],
      "@emergencies/infrastructure/*": [
        "./src/subdomains/house-machines/contexts/emergencies/infrastructure/*"
      ],
      "@emergencies/domain/*": [
        "./src/subdomains/house-machines/contexts/emergencies/domain/*"
      ],
      "@emergencies/application/*": [
        "./src/subdomains/house-machines/contexts/emergencies/application/*"
      ]
    }
  }
}
